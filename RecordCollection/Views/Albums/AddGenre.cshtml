@{
  Layout = "_Layout";
}

@model RecordCollection.Models.Album

<h2>Add Genre to @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.AlbumId)

  @Html.Label("Select Genre:")
  @Html.DropDownList("GenreId")

  <input type="submit" value="Add Genre" />
}

<p>@Html.ActionLink("Back Without Saving", "Details", new { id = Model.AlbumId })</p>
<p>@Html.ActionLink("Add Artist", "AddArtist", new { id = Model.AlbumId })</p>
<p>@Html.ActionLink("Album List", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>