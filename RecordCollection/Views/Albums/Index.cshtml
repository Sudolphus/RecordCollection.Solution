@{
  Layout = "_Layout";
}

@using RecordCollection.Models;
@model IEnumerable<RecordCollection.Models.Album>;

@if (Model.Count == 0)
{
  <p>There are no albums to display, please add an album.</p>
}

<ul>
@foreach(Album album in Model)
{
  <li>@Html.ActionLink($"{album.Name}", "Details", new {id = album.AlbumId})</li>
}
</ul>

<p>@Html.ActionLink("Add new album", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>