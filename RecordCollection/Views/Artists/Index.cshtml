@{
  Layout = "_Layout";
}

@using RecordCollection.Models;
@model IEnumerable<RecordCollection.Models.Artist>;

@if (Model.Count() == 0)
{
  <p>There are no Artists to display, please add an artist.</p>
}

<ul>
@foreach(Artist artist in Model)
{
  <li>@Html.ActionLink($"{artist.Name}", "Details", new {id = artist.ArtistId})</li>
}
</ul>

<p>@Html.ActionLink("Add new artist", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>