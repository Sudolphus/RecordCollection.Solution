@{
  Layout = "_Layout";
}

@using RecordCollection.Models;
@model IEnumerable<RecordCollection.Models.Genre>;

@if (Model.Count() == 0)
{
  <p>There are no Genres to display, please add an artist.</p>
}

<ul>
@foreach(Genre genre in Model)
{
  <li>@Html.ActionLink($"{genre.Name}", "Details", new {id = genre.GenreId})</li>
}
</ul>

<p>@Html.ActionLink("Add new genre", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>